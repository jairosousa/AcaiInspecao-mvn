<ehcache>
    <!--RegiÃ£o definida no disco para salvar os caches -->
	<diskStore path="/opt/cache" />
        <!--maxElementsInMemory= numero maximo de elementos na memoria,timeToIdleSeconds= tempo maximo que aquele objeto que
nao esta sendo utilizado vai ficar na memoria        -->
	<defaultCache 
		maxElementsInMemory="1000" 
		eternal="false"
		timeToIdleSeconds="60" 
		timeToLiveSeconds="120" 
		overflowToDisk="true"
		maxElementsOnDisk="100000" 
		diskExpiryThreadIntervalSeconds="120" 
		memoryStoreEvictionPolicy="LRU" />
</ehcache>